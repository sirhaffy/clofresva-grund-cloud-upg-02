{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "AccountName": "{{ storage_account | default('') }}",
    "BlobEndpoint": "{{ blob_endpoint | default('') }}",
    "ContainerName": "{{ container_name | default('') }}"
  },
  "MongoDB": {
    "ConnectionString": "{{ mongodb_connection_string | default('') }}",
    "DatabaseName": "cloudsoft",
    "CollectionName": "subscribers"
  },
  "SUBSCRIBER_REPOSITORY": "{% if mongodb_connection_string is defined and mongodb_connection_string != '' and 'YOUR_PASSWORD_HERE' not in mongodb_connection_string %}cosmos{% else %}inmemory{% endif %}",
  "FEATUREFLAGS": {
    "USEAZURESTORAGE": {% if storage_account is defined and storage_account != '' %}true{% else %}false{% endif %}
  }
}