{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "AccountName": "{{ storage_account | default('') }}",
    "BlobEndpoint": "{{ blob_endpoint | default('') }}",
    "ContainerName": "{{ container_name | default('appdata') }}"
  },
  "MongoDB": {
    "ConnectionString": "{{ mongodb_connection_string | default('') }}",
    "DatabaseName": "cloudsoft",
    "CollectionName": "subscribers"
  },
  "SUBSCRIBER_REPOSITORY": "{{ subscriber_repository_type | default('cosmos') }}",
  "FEATUREFLAGS": {
    "USEAZURESTORAGE": {% if storage_account is defined and storage_account != '' %}true{% else %}false{% endif %}
  }
}