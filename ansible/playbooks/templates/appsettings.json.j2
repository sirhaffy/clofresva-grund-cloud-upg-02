{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "AccountName": "{% if storage_account is defined %}{{ storage_account }}{% else %}{% endif %}",
    "BlobEndpoint": "{% if blob_endpoint is defined %}{{ blob_endpoint }}{% else %}{% endif %}",
    "ContainerName": "{% if container_name is defined %}{{ container_name }}{% else %}appdata{% endif %}"
  },
  "MongoDB": {
    "ConnectionString": "{% if mongodb_connection_string is defined %}{{ mongodb_connection_string }}{% else %}{% endif %}",
    "DatabaseName": "cloudsoft",
    "CollectionName": "subscribers"
  },
  "SUBSCRIBER_REPOSITORY": "{% if mongodb_connection_string is defined and mongodb_connection_string and mongodb_connection_string|length > 20 %}cosmos{% else %}inmemory{% endif %}",
  "FEATUREFLAGS": {
    "USEAZURESTORAGE": {% if storage_account is defined and storage_account and blob_endpoint is defined and blob_endpoint %}true{% else %}false{% endif %}
  }
}